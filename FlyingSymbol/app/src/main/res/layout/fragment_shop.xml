<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_game">

    <FrameLayout
        android:id="@+id/bgLayout"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstPageLayout"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="30dp"
        android:background="@drawable/bg_dialog"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/symbol2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/img_symbol_2"
            app:layout_constraintBottom_toTopOf="@+id/horizontal1"
            app:layout_constraintEnd_toStartOf="@+id/vertical1" />

        <ImageView
            android:id="@+id/symbol2Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol2"
            app:layout_constraintStart_toStartOf="@+id/symbol2"
            app:layout_constraintTop_toBottomOf="@+id/symbol2" />

        <ImageView
            android:id="@+id/symbol3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/img_symbol_3"
            app:layout_constraintBottom_toTopOf="@+id/horizontal1"
            app:layout_constraintStart_toStartOf="@+id/vertical1" />

        <ImageView
            android:id="@+id/symbol3Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol3"
            app:layout_constraintStart_toStartOf="@+id/symbol3"
            app:layout_constraintTop_toBottomOf="@+id/symbol3" />

        <ImageView
            android:id="@+id/symbol4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:src="@drawable/img_symbol_4"
            app:layout_constraintEnd_toStartOf="@+id/vertical1"
            app:layout_constraintTop_toTopOf="@+id/horizontal1" />

        <ImageView
            android:id="@+id/symbol4Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol4"
            app:layout_constraintStart_toStartOf="@+id/symbol4"
            app:layout_constraintTop_toBottomOf="@+id/symbol4" />

        <ImageView
            android:id="@+id/symbol5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/img_symbol_5"
            app:layout_constraintStart_toStartOf="@+id/vertical1"
            app:layout_constraintTop_toTopOf="@+id/horizontal1" />

        <ImageView
            android:id="@+id/symbol5Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol5"
            app:layout_constraintStart_toStartOf="@+id/symbol5"
            app:layout_constraintTop_toBottomOf="@+id/symbol5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondPageLayout"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="30dp"
        android:background="@drawable/bg_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/symbol6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:padding="5dp"
            android:src="@drawable/img_symbol_6"
            app:layout_constraintBottom_toTopOf="@+id/horizontal2"
            app:layout_constraintEnd_toStartOf="@+id/vertical2" />

        <ImageView
            android:id="@+id/symbol6Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol6"
            app:layout_constraintStart_toStartOf="@+id/symbol6"
            app:layout_constraintTop_toBottomOf="@+id/symbol6" />

        <ImageView
            android:id="@+id/symbol7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:padding="5dp"
            android:src="@drawable/img_symbol_7"
            app:layout_constraintBottom_toTopOf="@+id/horizontal2"
            app:layout_constraintStart_toStartOf="@+id/vertical2" />

        <ImageView
            android:id="@+id/symbol7Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol7"
            app:layout_constraintStart_toStartOf="@+id/symbol7"
            app:layout_constraintTop_toBottomOf="@+id/symbol7" />

        <ImageView
            android:id="@+id/symbol8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:src="@drawable/img_symbol_8"
            app:layout_constraintEnd_toStartOf="@+id/vertical2"
            app:layout_constraintTop_toTopOf="@+id/horizontal2" />

        <ImageView
            android:id="@+id/symbol8Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol8"
            app:layout_constraintStart_toStartOf="@+id/symbol8"
            app:layout_constraintTop_toBottomOf="@+id/symbol8" />

        <ImageView
            android:id="@+id/symbol9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/img_symbol_5"
            app:layout_constraintStart_toStartOf="@+id/vertical2"
            app:layout_constraintTop_toTopOf="@+id/horizontal2" />

        <ImageView
            android:id="@+id/symbol9Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/button_select"
            app:layout_constraintEnd_toEndOf="@+id/symbol9"
            app:layout_constraintStart_toStartOf="@+id/symbol9"
            app:layout_constraintTop_toBottomOf="@+id/symbol9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/backButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/img_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondPageLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:rotation="180"
        android:layout_marginStart="20dp"
        android:src="@drawable/img_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstPageLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/starsLayout"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingBottom="4dp"
            android:src="@drawable/img_star" />

        <TextView
            android:id="@+id/starsTextView"
            style="@style/BasicText"
            tools:text="13500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="28sp" />

    </LinearLayout>

    <com.symbol.game.core.library.CustomImageButton
        android:id="@+id/buttonClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/button_close"
        app:layout_constraintEnd_toEndOf="@+id/bgLayout"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/button_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>