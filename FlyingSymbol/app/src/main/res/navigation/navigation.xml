<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fragmentMain">

    <fragment
        android:id="@+id/fragmentMain"
        android:name="com.symbol.game.ui.main.FragmentMain"
        android:label="FragmentMain" >
        <action
            android:id="@+id/action_fragmentMain_to_fragmentGame"
            app:destination="@id/fragmentGame" />
        <action
            android:id="@+id/action_fragmentMain_to_fragmentShop"
            app:destination="@id/fragmentShop" />
        <action
            android:id="@+id/action_fragmentMain_to_fragmentOptions"
            app:destination="@id/fragmentOptions" />
    </fragment>
    <fragment
        android:id="@+id/fragmentGame"
        android:name="com.symbol.game.ui.game.FragmentGame"
        android:label="FragmentGame" >
        <action
            android:id="@+id/action_fragmentGame_to_dialogEnd"
            app:destination="@id/dialogEnd" />
        <action
            android:id="@+id/action_fragmentGame_to_dialogPause"
            app:destination="@id/dialogPause" />
    </fragment>
    <dialog
        android:id="@+id/dialogEnd"
        android:name="com.symbol.game.ui.dialogs.DialogEnd"
        android:label="DialogEnd" >
        <argument
            android:name="scores"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/dialogPause"
        android:name="com.symbol.game.ui.dialogs.DialogPause"
        android:label="DialogPause" />
    <fragment
        android:id="@+id/fragmentShop"
        android:name="com.symbol.game.ui.shop.FragmentShop"
        android:label="FragmentShop" />
    <fragment
        android:id="@+id/fragmentOptions"
        android:name="com.symbol.game.ui.options.FragmentOptions"
        android:label="FragmentOptions" >
        <argument
            android:name="skin"
            app:argType="integer" />
    </fragment>
</navigation>